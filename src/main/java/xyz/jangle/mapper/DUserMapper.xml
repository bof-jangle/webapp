<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
    <!--   
        namespace：必须与对应的接口全类名一致  
        id:必须与对应接口的某个对应的方法名一致  
     -->  
    <mapper namespace="xyz.jangle.dao.DUserMapper">  
          
        <insert id="save" parameterType="DUser">  
            insert into d_user(usr_name,usr_code,usr_password,usr_status,create_time,update_time)
            values (#{usrName},#{usrCode},#{usrPassword},1,#{createTime},#{updateTime}) 
        </insert>
    </mapper>  